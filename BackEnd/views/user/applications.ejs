<% layout('./layouts/indexLayout.ejs') -%> <% function textCapitalize(text) {
return text.charAt(0).toUpperCase() + text.slice(1); } %>
<div class="w-100 mt-3 d-flex">
  <div class="ms-5">
    <h3>Applications</h3>
    <%- include("./../includes/breadcrumb.ejs") %>
  </div>
  <div class="dropdown ms-auto me-4 w-">
    <button
      class="btn btn-light dropdown-toggle"
      type="button"
      id="status-dropdown"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <%= textCapitalize(page.status.currentStatus) %>
    </button>
    <ul class="dropdown-menu" aria-labelledby="status-dropdown">
      <% for( const items of page.status.validStatus ){ %>
      <li>
        <a class="dropdown-item" href="/user/applications?status=<%= items %>"
          ><%= textCapitalize(items) %></a
        >
      </li>
      <% } %>
    </ul>
  </div>
</div>
<div class="">
  <% if(page.data && page.data.length!==0){ %> <% for (const items of
  page.data){ %>
  <div class="company-item rounded bg-color-<%= items.status %> p-3 mx-4 mb-3">
    <div class="company-item-header d-flex align-items-center flex-wrap">
      <div class="company-item-logo">
        <img src="/logo/<%= items.logo %>" alt="Logo" srcset="" />
      </div>
      <div class="company-item-name">
        <h3><%= items.name %></h3>
      </div>
      <div class="ms-auto text-end">
        <div>
          <a href="" class="">#<%= items.no %></a>
          <p><%= new Date(items.updatedAt).toLocaleString() %></p>
        </div>
      </div>
    </div>
    <hr
      style="width: 100%; color: black; height: 1px; background-color: black"
    />
    <div>
      <h5>Description:</h5>
      <p class="text-justify"><%= items.description %></p>
    </div>
    <div class="company-item-detail">
      <div>
        <div>
          <h5>Details:</h5>
        </div>
        <ul class="list-unstyled">
          <li>
            <% // Don't forget to remove ? %> Applied By :
            <a href="/user/<%= items.applicant?._id %>"
              ><%= items.applicant?.name %></a
            >
          </li>
          <li>
            Email: <a href="mailto:<%= items.email %>"><%= items.email %></a>
          </li>
          <li>
            Phone No. :
            <a href="tel:+91<%= items.phone %>"><%= items.phone %></a>
          </li>
          <li>Address : <%= items.address %></li>
        </ul>
      </div>
      <div>
        <div>
          <h5>Document:</h5>
        </div>
        <ul class="">
          <% for (const document of items.document){ %>
          <li>
            <a href="/file/<%= document._id %>" target="_blank"
              ><%= textCapitalize(document.name) %>
            </a>
          </li>
          <% } %>
        </ul>
      </div>
      <div>
        <div>
          <h5>Team:</h5>
        </div>
        <ul class="">
          <% for (const elem of items.team){ %>
          <li>
            <a href=""><%= textCapitalize(elem) %></a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
    <% if (items.userResponse !=='pending' && items.userResponse !=='') { %>
    <div>
      <h5>Applicant Response:</h5>
      <p class="text-justify"><%= items.userResponse %></p>
    </div>
    <% } %> <% if (items.adminResponse !=='pending' && items.adminResponse !==''
    ) { %>
    <div>
      <h5>Reply :</h5>
      <p class="text-justify"><%= items.adminResponse %></p>
    </div>
    <% } %>
    <div class="row">
      <div class="col">
        <h5>Status:</h5>
        <p><%= textCapitalize(items.status) %></p>
      </div>
      <% if (items.status=='approved' && items.pitch.date) { %>
      <div class="col">
        <h5>Pitch Date:</h5>
        <p><%= new Date(items.pitch.date).toLocaleDateString() %></p>
      </div>
      <%} %>
    </div>

    <hr
      style="width: 100%; color: black; height: 1px; background-color: black"
    />
  </div>

  <% } %> <% } else { %>
  <div class="text-center m-4">
    <div class="d-flex justify-content-center align-items-center">
      <h1 class="not-found-color">!</h1>
    </div>
    <h1>No Applications Found</h1>
    <a
      class="btn btn-primary my-2 text-light"
      href="/admin/applications?status=all"
      role="button"
      >Click here to view applied applications</a
    >
  </div>
  <% } %>
</div>
